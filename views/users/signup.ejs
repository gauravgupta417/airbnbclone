<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>Signup on Wanderlust</h1>
     <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-2">
            <lable for="username" class="form-label">Username</lable>
        <input name="username" id="username"  type="text" class="form-control" required></input>
    <div class="valid-feedback">Looks good!</div>

    <div class="mb-2">
        <lable for="email" class="form-label">Email</lable>
    <input name="email" id="email"  type="email" class="form-control" required></input>
       
    <div class="mb-2">
        <lable for="password" class="form-label">password</lable>
    <input name="password" id="password"  type="password" class="form-control" required></input>
    <br> <button class="btn btn-success">SignUp</button>
    <br><br><br><br><br><br>

     </form>
    </div>
</div>