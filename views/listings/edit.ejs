<% layout("/layouts/boilerplate")%>
<body>
   <form method="POST" action="/listings/<%=listing._id%>?_method=put" novalidate class="needs-validation">
    <div class="row mt-1">
        <div class="col-8 offset-2">
            <h3>Edit your listing</h3>
            <div class="mb-1.5">
                <lable for="title" class="form-label">Enter title</lable>
                <input name="listing[title]" value="<%= listing.title%>" type="text" class="form-control" required></input>
                <div class="valid-feedback">title looks good!</div>
              </div>
        
            <div class="mb-2">
                <lable for="Description" class="form-label">Description</lable>
                <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>

                <div class="invalid-feedback">Description should be valid</div>
              </div>
              <div class="mb-3">
                Original listing image<br>
                <img src="<%= listing.image %>" alt="" style="height: 8rem;">
                </div>
            <div class="mb-3"> 
                <lable for="Image" class="form-label">Image Link</lable>
                <input name="listing[image]" value="<%= listing.image %>" type="text" class="form-control" required></input>
                <div class="invalid-feedback"> image link should be valid!</div>
              </div>
        
           <div class="row">
            <div class="mb-3 col-4">  <lable for="Price" class="form-label">Price</lable>
                <input name="listing[price]" value="<%= listing.price%>" type="number" class="form-control" required></input>
                <div class="invalid-feedback"> price should be valid!</div>
              </div>
              <div class="mb-3 col-8"><lable for="Country" class="form-label"> Country </lable>
                <input name="listing[country]" value="<%= listing.country%>" type="text" class="form-control" required></input>
                <div class="invalid-feedback"> country should be valid!</div>
              </div>
           </div>
        
              <div class="mb-3"><lable for="Location" class="form-label">Location</lable>
                <input name="listing[location]" value="<%= listing.location%>" type="text" class="form-control" required></input>
                <div class="invalid-feedback"> location should be valid!</div>
              </div>
               <button class="btn btn-dark mine">Edit</button>
        </div>
    </div>

   </form>
   <script src="/js/script.js"></script>
</body>

