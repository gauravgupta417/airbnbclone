<% layout("/layouts/boilerplate")%>
<body>
   <form method="POST" action="/listings" novalidate class="needs-validation" >
   <div class="row">
    <div class="col-8 offset-2">
    <div class="mb-2">
        <lable for="title" class="form-label">Enter title</lable>
    <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required></input>
<div class="valid-feedback">title looks good!</div>
    </div>


    <div class="mb-1.5">
        <lable for="Description" class="form-label">Description</lable>
        <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
        <div class="invalid-feedback">Description should be valid</div>
    </div>


   
    <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input name="listing[image]" placeholder="enter image url/link"     type="text"  class="form-control">
      
    </div>


   <div class="row">

    <div class="mb-3 col-md-4">
        <lable for="Price" class="form-label">Price</lable>
        <input name="listing[price]" placeholder="enter price"  class="form-control" required></input>
        <div class="invalid-feedback"> price should be valid!</div>
    </div>

    <div class="mb-3 col-md-8">
        <lable for="Country" class="form-label"> Country </lable>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required></input>
        <div class="invalid-feedback"> country should be valid!</div>
    </div>

   </div>


    <div class="mb-3"> 
        <lable for="Location" class="form-label">Location</lable>
        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required></input>
        <div class="invalid-feedback"> location should be valid!</div>
        <br>   <button class="btn btn-dark mine">Add</button>
    </div>

   </div>

</div>
  
   </form>
</body>
